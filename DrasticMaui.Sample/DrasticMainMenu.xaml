<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrasticMaui.Sample.DrasticMainMenu"
             Title="DrasticMaui">
    <CollectionView Margin="0,20,0,0" SelectionMode="Single" x:Name="CollectionViewTest">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border>
                    <Label Text="{Binding Text}" />
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>