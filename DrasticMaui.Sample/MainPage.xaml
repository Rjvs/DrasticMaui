<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DrasticMaui;assembly=DrasticMaui"
             Title="{Binding Title}"
             x:Class="DrasticMaui.Sample.MainPage">
    <VerticalStackLayout Spacing="10" VerticalOptions="Center">
        <Button Text="Toggle Full Screen" Command="{Binding ShowFullScreenCommand}"></Button>
        <Button Text="Setup Tray Icon" Command="{Binding SetupTrayIconCommand}"></Button>
        <Button Text="Try Get Status Icon Frame Location" Command="{Binding TestTrayIconCommand}"></Button>
        <Button Text="New Window" Command="{Binding AddNewWindowCommand}"></Button>
        <Button Text="New Tray App" Command="{Binding NewTrayAppCommand}"></Button>
        <Button Text="Add Page Overlay" Command="{Binding AddPageOverlayCommand}"></Button>
        <Button Text="Navigate page" Command="{Binding NavigatePageCommand}"></Button>
    </VerticalStackLayout>
</local:BasePage>
